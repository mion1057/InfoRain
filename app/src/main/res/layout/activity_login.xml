<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1920dp"
    android:layout_height="1080dp">

    <TextView
        android:id="@+id/stbId"
        android:layout_width="75dp"
        android:layout_height="41dp"
        android:layout_marginTop="520dp"
        android:gravity="center"
        android:text="STB ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/STBID"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="520dp"
        android:ems="10"
        android:text="andStb1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/STBPassword"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:text="1324"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/STBID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/STBID"
        app:layout_constraintTop_toBottomOf="@+id/STBID" />

    <TextView
        android:id="@+id/stbpw"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="STB PW"
        app:layout_constraintEnd_toEndOf="@+id/stbId"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/stbId"
        app:layout_constraintTop_toBottomOf="@+id/stbId" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="162dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Remember login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin" />

    <Button
        android:id="@+id/signin"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="664dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textResponse"
        android:layout_width="546dp"
        android:layout_height="121dp"
        android:layout_marginTop="48dp"
        android:text="TextView"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="332dp"
        android:layout_height="323dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/inforain" />
</androidx.constraintlayout.widget.ConstraintLayout>